<body>
  
  <div class="py-4">
    <h2>Datos del perfil</h2>
    <hr class="w-50" />
    
    <form method="PUT">
      <div class="form-group row w-50 m-auto">
        <div class="form-group col-12 col-sm-6">
          <label>Email</label>
          <input type="email" name="email" class="form-control m-auto" disabled/>
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Nombre</label>
          <input name="name" class="form-control m-auto" placeholder="Tony Hawk" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Password</label>
          <input type="password" name="password" class="form-control m-auto" type="password" placeholder="12345678"/>
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Repita la password</label>
          <input type="password" name="password2" class="form-control m-auto" type="password" placeholder="12345678"/>
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>AÃ±os de experiencia</label>
          <input type="number" name="experience" class="form-control m-auto" placeholder="12" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Especialidad</label>
          <input name="speciality" class="form-control m-auto" placeholder="Kickflip" />
        </div>
      </div>
      <div class="mb-1">
        <button type="submit" class="btn btn-primary">Actualizar</button>
      </div>
      <div>
        <button class="btn btn-danger">Eliminar cuenta</button>
      </div>
    </form>
  </div> 
  <script src="js/dataPage.js"></script> 
</body>
