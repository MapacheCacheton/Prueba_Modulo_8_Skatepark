<body>
    <div class="py-4">
        <h2>Registro</h2>
        <hr class="w-50" />

        <form method="post">
            <div class="form-group row w-50 m-auto">
            <div class="form-group col-12 col-sm-6">
                <label>Email</label>
                <input placeholder="Ej: correo@gmail.com" type="email" name="email" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Nombre</label>
                <input placeholder="Ej: Tony Hawk" name="name" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Password</label>
                <input placeholder="Ej: 123456789" type="password" name="password" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Repita la password</label>
                <input placeholder="Ej: 123456789" type="password" name="pass2" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Años de experiencia</label>
                <input placeholder="Ej: 12" type="number" name="experience" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Especialidad</label>
                <input placeholder="Ej: Kickflip" name="speciality" class="form-control m-auto" />
            </div>
            <div class="form-group col-12 col-sm-12">
                <label>Foto de perfil</label>
                <input name="files" type="file" name="files"/>
            </div>
            </div>
            <button class="btn btn-info mb-3">Registrarme</button>
            <p><a href="http://localhost:3000/login" class='btn btn-primary mb-3'> Iniciar sesión</a></p>
        </form>
    </div>
    <script src="js/registerPage.js"></script>
</body>